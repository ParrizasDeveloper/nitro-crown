enum Transmission {
  Automatic
  Manual
  SemiAutomatic
}

enum FuelType {
  Gasoline
  Diesel
  Electric
  Hybrid
}

enum Availability {
  Available
  Sold
  Reserved
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String @id @default (cuid())
  clerkId     String @unique
  email       String @unique
  name        String ?
  imageURL    String ?
  favorites   Favorite[]
  createdAt   DateTime @default (now())
  role        String ?
}

model Car {
  id            String @id @default (cuid())
  title         String
  brand         String
  model         String
  year          Int
  price         Int
  kms           Int
  availability  Availability @default(Available)
  transmission  Transmission
  fuelType      FuelType
  imageBaseURL  String ?
  images        String[]
  description   String
  favorites     Favorite[]
  createdAt     DateTime @default (now())
}

model Favorite {
  id        String @id @default (cuid())
  userId    String
  carId     String
  user      User @relation(fields: [userId], references: [id])
  car       Car @relation(fields: [carId], references: [id])
  createdAt DateTime @default (now())

  @@unique([userId, carId])
}
