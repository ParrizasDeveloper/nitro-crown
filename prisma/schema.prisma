generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(cuid())
  clerkId   String     @unique
  email     String     @unique
  name      String?
  imageURL  String?
  createdAt DateTime   @default(now())
  role      String?
  favorites Favorite[]
}

model Car {
  id           String       @id @default(cuid())
  slug         String       @unique
  brand        String
  model        String
  year         Int
  price        Int
  kms          Int
  availability Availability @default(Available)
  transmission Transmission
  fuelType     FuelType
  images       String[]
  description  String
  createdAt    DateTime     @default(now())
  favorites    Favorite[]
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  carId     String
  createdAt DateTime @default(now())
  car       Car      @relation(fields: [carId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, carId])
}

enum Transmission {
  Automatic
  Manual
  SemiAutomatic
}

enum FuelType {
  Gasoline
  Diesel
  Electric
  Hybrid
}

enum Availability {
  Available
  Sold
  Reserved
}
